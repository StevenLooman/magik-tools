root = true

[*.java]
charset = utf-8
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.magik]
charset = iso8859-1
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 8
trim_trailing_whitespace = true

[*.{yml,yaml}]
charset = utf-8
indent_size = 2
indent_style = space

[*.md]
indent_size = 4

[*.py]
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.ts]
charset = utf-8
indent_size = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true
